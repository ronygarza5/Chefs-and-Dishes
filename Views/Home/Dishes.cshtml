@using ChefsDishes.Models
@model List<Dish> 


<h2><a asp-action="Index" asp-controller="Home">Chefs</a> | Dishes</h2>
<a asp-action="AddDishes" asp-controller="Home">Add a Dish</a>
<h3>Yum, look at our tasty dishes!</h3>
<table>
    <thead>
        <tr class="table table-hover">
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var d in @Model)
        {
            <tr>
                <td>@d.Name</td>
                <td>@d.Maker.FirstName @d.Maker.LastName</td>
                <td>@d.Tastiness</td>
                <td>@d.Calories</td>
                <td>@d.Description</td>
            
            </tr>

        }
    </tbody>
</table>